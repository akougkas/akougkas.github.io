{% if site.footer_fixed %}
  <footer class="fixed-bottom" role="contentinfo">
    <div class="container mt-0 d-flex justify-content-between">
      <div class="left-footer" style="font-size: 0.7rem;"> 
        &copy; Copyright {{ site.time | date: '%Y' }} {{ site.first_name }} {{ site.middle_name }} {{ site.last_name }}. {{ site.footer_text }}        
      </div>
      <div class="middle-footer" style="flex: 1.2;">
        <div class="contact-icons">{% include social.liquid %}</div>
      </div>
      <div class="right-footer" style="font-size: 0.7rem;">
        {% if site.last_updated %}
          Last updated: {{ 'now' | date: '%B %d, %Y' }}.
        {% endif %}
      </div>
    </div>
  </footer>
{% else %}
  <footer class="sticky-bottom mt-5" role="contentinfo">
    <div class="container d-flex justify-content-between">
      <div class="left-footer" style="font-size: 0.7rem;">
        &copy; Copyright {{ site.time | date: '%Y' }} {{ site.first_name }} {{ site.middle_name }} {{ site.last_name }}. {{ site.footer_text }}
      </div>
      <div class="middle-footer" style="flex: 1.2;"> 
        <div class="contact-icons">{% include social.liquid %}</div>
      </div>
      <div class="right-footer" style="font-size: 0.7rem;"> 
        {% if site.last_updated %}
          Last updated: {{ 'now' | date: '%B %d, %Y' }}.
        {% endif %}
      </div>
    </div>
  </footer>
{% endif %}
